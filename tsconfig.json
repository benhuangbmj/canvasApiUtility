{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true
  },
  "lib": ["es2015"],
  "include": ["**/*"],
  "exclude": ["dist", "node_modules"]
}
